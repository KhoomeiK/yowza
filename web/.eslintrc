{
  "extends": [
    "airbnb"
  ],
  "env": {
    "browser": true
  },
  "settings": {
    "import/extensions": [
      ".js",
      ".jsx"
    ],
    "import/resolver": {
      "alias": {
        "map": [
          ["@src", "./"]
        ],
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "rules": {
    "jsx-a11y/anchor-is-valid": [ "error", {
      "components": [ "Link" ],
      "specialLink": [ "hrefLeft", "hrefRight" ],
      "aspects": [ "invalidHref", "preferButton" ]
    }]
  }
}
